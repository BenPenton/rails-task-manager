<div class="wrapper">
  <%= form_for @task do |task| %>
    <div class="form-group container">
      <%= task.label :title, "Enter the title" %>
      <%= task.text_field :title, :class =>"form-control" %>

      <%= task.label :details, "Enter the details" %>
      <%= task.text_field :details, :class =>"form-control" %>

      <%= task.label :completed, "Is the class done" %>
      <%= task.check_box :completed, :class =>"form-control"%>

      <%= task.submit "Submit", :class => "btn btn-primary" %>

    </div>
  <% end %>

</div>
